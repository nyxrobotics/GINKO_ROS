<?xml version="1.0"?>


<robot name="body" xmlns:xacro="http://www.ros.org/wiki/xacro">
	<xacro:macro name="body" params="name parent">
	<!-- <xacro:property name="name" value="leg"/> -->

		<!-- chest -->
		<link name="${name}_link0">
			<!-- Collision created from STL mesh without color -->
			<collision>
				<origin xyz="0 0 0" rpy="0 0 0"/>
				<geometry>                                                              
					<mesh filename="package://ginko_description/models/ginko_auto/meshes/stl/link00_chest.stl"/>
				</geometry>
			</collision>
			<!-- Visualisation created from Color dae -->
			<visual>
				<origin xyz="0 0 0" rpy="0 0 0"/>
				<geometry>
					<mesh filename="package://ginko_description/models/ginko_auto/meshes/dae/link00_chest.dae"/>
				</geometry>
			</visual>
			<!-- nothing worth -->
			<inertial>
				<origin xyz="0 0 0" rpy="0 0 0"/>
				<mass value="6.1"/>
				<inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
			</inertial>
		</link>
		<joint name="${name}_joint0" type="fixed">
		    <parent link="${parent}"/>
			<child link="${name}_link0"/>
		    <origin xyz="0 0 0" rpy="0 0 0"/>
		    <axis xyz="0 0 1"/>
		</joint>


		<!-- parallel link (upper-1st) -->
		<link name="${name}_link1">
			<!-- Collision created from STL mesh without color -->
			<collision>
				<origin xyz="0 0 0" rpy="0 0 0"/>
	    		<geometry>                                                              
					<mesh filename="package://ginko_description/models/ginko_auto/meshes/stl/link01_waist.stl"/>
	    		</geometry>
			</collision>
			<!-- Visualisation created from Color dae -->
	    	<visual>
				<origin xyz="0 0 0" rpy="0 0 0"/>
	    		<geometry>
					<mesh filename="package://ginko_description/models/ginko_auto/meshes/dae/link01_waist.dae"/>
	    		</geometry>
			</visual>
			<!-- nothing worth -->
			<inertial>
				<origin xyz="0 0 0" rpy="0 0 0"/>
				<mass value="6.1"/>
				<inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
			</inertial>
		</link>
		<joint name="${name}_joint1" type="revolute">
			<parent link="${name}_link0"/>
			<child  link="${name}_link1"/>
			<origin xyz="0 0 0" rpy="0 0 0"/>
			<axis xyz="0 0 1"/>
			<limit effort="1000.0" lower="-2.6" upper="2.6" velocity="0.5"/>
		</joint>



		<link name="${name}_arm_r_link"/>
		<joint name="${name}_joint2" type="fixed">
		    <parent link="${name}_link0"/>
			<child link="${name}_arm_r_link"/>
		    <origin xyz="0 -0.10683 0.05115" rpy="0 0 0"/>
		    <axis xyz="0 -1 0"/>
		</joint>

		<link name="${name}_arm_l_link"/>
		<joint name="${name}_joint3" type="fixed">
		    <parent link="${name}_link0"/>
			<child link="${name}_arm_l_link"/>
		    <origin xyz="0 0.10683 0.05115" rpy="0 0 0"/>
		    <axis xyz="0 1 0"/>
		</joint>

		<link name="${name}_leg_r_link"/>
		<joint name="${name}_joint4" type="fixed">
		    <parent link="${name}_link1"/>
			<child link="${name}_leg_r_link"/>
		    <origin xyz="0.0205 0.0 -0.0409" rpy="0 0 0"/>
		    <axis xyz="0 1 0"/>
		</joint>

		<link name="${name}_leg_l_link"/>
		<joint name="${name}_joint5" type="fixed">
		    <parent link="${name}_link1"/>
			<child link="${name}_leg_l_link"/>
		    <origin xyz="-0.0404 0.0 -0.0409" rpy="0 0 0"/>
		    <axis xyz="0 1 0"/>
		</joint>

	</xacro:macro>
</robot>
